@using SynchronicWorld.Models
@model SynchronicWorld.Models.EventContributionModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@{
    var db = new SynchronicWorldDbContext();
    var creator = db.Users.Find(Model.Event.CreatorId);
    String creatorName = creator.LastName + " " + creator.Name;

    <div>
        <h4>Event</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Event.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Address)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.TypeEvent.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.TypeEvent.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Event.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Event.Status)
            </dd>

            <dt>
                Creator
            </dt>

            <dd>
                @(creatorName)
            </dd>

        </dl>
    </div>
    
    <hr />
    <h4>Contributions</h4>
        
    foreach (var contribution in Model.Contributions)
    {
        var contributor = db.Users.Find(contribution.UserId);
        String contributorName = contributor.LastName + " " + contributor.Name;
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => contribution.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => contribution.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => contribution.TypeContribution.Name)
                </th>
                <th>
                    Contributor
                </th>
            </tr>

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => contribution.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contribution.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => contribution.TypeContribution.Name)
                </td>
                <td>
                    @(contributorName)
                </td>
            </tr>
        </table>
    }
}
