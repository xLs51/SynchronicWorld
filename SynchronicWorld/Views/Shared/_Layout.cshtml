<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SynchronicWorld</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SynchronicWorld", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                @{
                    HttpCookie cookie = Request.Cookies["User"] ;

                    if (cookie != null)
                    {
                        @Html.Raw("<li>" + @Html.ActionLink("Profile", "Index", "Profile") + "</li>")
                        @Html.Raw("<li>" + @Html.ActionLink("Find a friend", "Index", "FindFriend") + "</li>")
                        @Html.Raw("<li>" + @Html.ActionLink("Friends", "Index", "MyFriend") + "</li>")
                        @Html.Raw("<li>" + @Html.ActionLink("Event", "Index", "Event") + "</li>")
                        @Html.Raw("<li>" + @Html.ActionLink("Sign out", "SignOut", "Account") + "</li>")
                    }
                    else
                    {
                        @Html.Raw("<li>" + @Html.ActionLink("Sign in", "Index", "Account") + "</li>")  
                    }

                    if (cookie != null && cookie.Values["Role"] == "1")
                    {
                        <li class="dropdown">
                          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                          <ul class="dropdown-menu">
                            @Html.Raw("<li>" + @Html.ActionLink("User", "Index", "User") + "</li>") 
                            @Html.Raw("<li>" + @Html.ActionLink("Role", "Index", "Role") + "</li>") 
                            @Html.Raw("<li>" + @Html.ActionLink("Event", "Index", "EventAdmin") + "</li>") 
                          </ul>
                        </li>
                    }            
                }
                    
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <br/><br/>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SynchronicWorld</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>